{
	"compilerOptions": {
		/* Basic Options */
		"incremental": true,
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM"],
		"allowJs": true,
		"isolatedModules": true,
		/* Module Resolution Options */
		"moduleResolution": "node",
		"esModuleInterop": true,
		/* Experimental Options */
		"experimentalDecorators": true,
		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}
