{
	"compilerOptions": {
		/* Basic Options */
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM"],
		"allowJs": true,
		"noEmit": true,
		/* Module Resolution Options */
		"moduleResolution": "Node",
		"esModuleInterop": true,
		/* Experimental Options */
		"experimentalDecorators": true,
		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["./src"]
}
