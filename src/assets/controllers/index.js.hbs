export function loadDefinitions(application) {
	return Promise.all(
		[
			{{#each dependencies}}
			[
				"{{this.parsedPath.name}}",
				import(
					/* webpackChunkName: "controller-{{this.parsedPath.name}}" */
					"./{{relativePath this.path}}"
				),
			],
			{{/each}}
		].map(async ([identifier, fetchingModule]) => {
			const Controller = (await fetchingModule).default;
			application.register(identifier, Controller);
		})
	);
}
